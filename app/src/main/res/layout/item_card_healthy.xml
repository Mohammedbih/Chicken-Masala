<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="296dp"
    app:cardElevation="@dimen/zero"
    android:layout_margin="@dimen/spacing_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/healthy_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:roundPercent="0.3"
            app:shapeAppearanceOverlay="@style/ShapeOfHealthyImage" />

        <TextView
            android:id="@+id/healthy_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="24sp"
            tools:text="Avoid ultra-processed foods" />

        <TextView
            android:id="@+id/healthy_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Sugary drinks like sodas- fruit juices- and sweetened teas are the primary source of added sugar in the American diet." />

    </LinearLayout>

</androidx.cardview.widget.CardView>