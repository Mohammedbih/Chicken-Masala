<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/imageCard"
            android:layout_width="@dimen/home_card_width"
            android:layout_height="@dimen/home_card_height"
            android:layout_marginStart="@dimen/spacing_medium"
            android:scaleType="centerCrop"
            android:src="@drawable/imagacard"
            app:circularflow_defaultRadius="@dimen/radius_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:round="@dimen/radius_normal"

            />

        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/radius_normal"
            android:layout_marginBottom="@dimen/spacing_large"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/spaghetti_meatballs"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_body"
            app:layout_constraintBottom_toBottomOf="@+id/imageCard"
            app:layout_constraintStart_toStartOf="@+id/imageCard" />

        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:text="@string/indian"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageCard"
            app:layout_constraintStart_toStartOf="@+id/imageCard"
            app:layout_constraintTop_toBottomOf="@+id/recipe_name"
            app:layout_constraintVertical_bias="0.428" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:text="@string/_5_min"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageCard"
            app:layout_constraintEnd_toEndOf="@+id/imageCard"
            app:layout_constraintTop_toBottomOf="@+id/recipe_name" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_small"
            android:background="@null"
            android:src="@drawable/timer_icon"
            app:layout_constraintBottom_toBottomOf="@+id/time"
            app:layout_constraintEnd_toStartOf="@+id/time"
            app:layout_constraintTop_toTopOf="@+id/time" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_small"
            android:background="@null"
            android:src="@drawable/food_icon"
            app:layout_constraintBottom_toBottomOf="@+id/country"
            app:layout_constraintEnd_toStartOf="@+id/country"
            app:layout_constraintStart_toStartOf="@+id/imageCard"
            app:layout_constraintTop_toTopOf="@+id/country" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>