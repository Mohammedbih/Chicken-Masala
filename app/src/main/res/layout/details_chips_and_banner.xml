<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_details"
        style="@style/CardImageStyle"
        tools:srcCompat="@tools:sample/backgrounds/scenic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_food_name"
        style="@style/TextStyle.Title.Medium"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recipe_name"
        app:layout_constraintTop_toBottomOf="@id/image_details" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/clean_ingredient_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_normal"
        android:clipToPadding="false"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/text_view_food_name"
        tools:listitem="@layout/item_chip" />

    <TextView
        android:id="@+id/text_details"
        style="@style/TextStyle.Title.Medium"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/details_text"
        app:layout_constraintTop_toBottomOf="@id/clean_ingredient_recycle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_normal"
        android:background="@drawable/background_container_details"
        android:paddingVertical="@dimen/spacing_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_details">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icon_timer"
            style="@style/horizontalIconStyle"
            android:layout_marginBottom="@dimen/spacing_small"
            android:src="@drawable/icon_timer"
            app:layout_constraintBottom_toTopOf="@id/text_timer"
            app:layout_constraintEnd_toEndOf="@id/text_timer"
            app:layout_constraintStart_toStartOf="@id/text_timer"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_45_min"
            android:textColor="@color/tertiary_60"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/line_first"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/line_first"
            style="@style/detailsDivider"
            app:layout_constraintBottom_toBottomOf="@id/text_timer"
            app:layout_constraintEnd_toStartOf="@+id/text_cuisine"
            app:layout_constraintStart_toEndOf="@+id/text_timer"
            app:layout_constraintTop_toTopOf="@id/icon_timer" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icon_cuisine"
            style="@style/horizontalIconStyle"
            android:layout_marginBottom="@dimen/spacing_small"
            android:src="@drawable/icon_cuisin"
            app:layout_constraintEnd_toEndOf="@id/text_cuisine"
            app:layout_constraintStart_toStartOf="@id/text_cuisine"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_cuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/indian"
            android:textColor="@color/tertiary_60"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/line_second"
            app:layout_constraintStart_toEndOf="@id/line_first" />

        <View
            android:id="@+id/line_second"
            style="@style/detailsDivider"
            app:layout_constraintBottom_toBottomOf="@id/text_cuisine"
            app:layout_constraintEnd_toStartOf="@+id/ingredient_count"
            app:layout_constraintStart_toEndOf="@+id/text_cuisine"
            app:layout_constraintTop_toTopOf="@id/icon_cuisine" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icon_ingredient"
            style="@style/horizontalIconStyle"
            android:src="@drawable/icon_whisk"
            android:layout_marginBottom="@dimen/spacing_small"
            app:layout_constraintBottom_toTopOf="@id/ingredient_count"
            app:layout_constraintEnd_toEndOf="@id/ingredient_count"
            app:layout_constraintStart_toStartOf="@id/ingredient_count"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ingredient_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_12"
            android:textColor="@color/tertiary_60"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/line_second" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>