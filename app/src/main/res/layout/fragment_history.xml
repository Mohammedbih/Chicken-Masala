<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.HistoryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_history_one"
            style="@style/CardImageStyle"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/photo_card_height"
            android:src="@drawable/history_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/history_title"
            style="@style/TextStyle.Title.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="@string/history_of_indian_food"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_history_one" />

        <TextView
            android:id="@+id/text_content_one"
            style="style/TextStyle.Body.Medium"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:text="@string/history_content_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/history_title"
            app:layout_constraintTop_toBottomOf="@+id/history_title" />

        <TextView
            android:id="@+id/text_content_two"
            style="style/TextStyle.Body.Medium"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:text="@string/history_content_two"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/text_content_one"
            app:layout_constraintTop_toBottomOf="@+id/text_content_one" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_history_two"
            style="@style/CardImageStyle"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/photo_card_height"
            android:src="@drawable/history_image2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_content_two" />

        <TextView
            android:id="@+id/text_content_three"
            style="style/TextStyle.Body.Medium"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:text="@string/history_content_three"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/image_history_two"
            app:layout_constraintTop_toBottomOf="@+id/image_history_two" />

        <TextView
            android:id="@+id/text_content_four"
            style="style/TextStyle.Body.Medium"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:text="@string/history_content_four"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/text_content_three"
            app:layout_constraintTop_toBottomOf="@+id/text_content_three" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_history_three"
            style="@style/CardImageStyle"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/photo_card_height"
            android:src="@drawable/history_image_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_content_four" />

        <TextView
            android:id="@+id/text_content_five"
            style="style/TextStyle.Body.Medium"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:text="@string/history_content_five"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/image_history_three"
            app:layout_constraintStart_toStartOf="@+id/image_history_three"
            app:layout_constraintTop_toBottomOf="@+id/image_history_three" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>