<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="selectedChipStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_label</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>

    <style name="unSelectedChipStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_label</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:backgroundTint">@color/un_selected_chip</item>
    </style>
</resources>