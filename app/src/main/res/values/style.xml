<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="title">
        <item name="android:textColor">@color/tertiary_87</item>
        <item name="android:textSize">@dimen/font_size_title_medium</item>
        <item name="android:layout_margin">@dimen/spacing_medium</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="selectedChipStyle">
        <item name="android:textSize">@dimen/font_size_label</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
    </style>

    <style name="horizontalIconStyle">
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/tertiary_38</item>
    </style>

    <style name="horizontalContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/font_size_label</item>
        <item name="android:textColor">@color/tertiary_38</item>
    </style>

    <style name="unSelectedChipStyle">
        <item name="android:textColor">@color/tertiary_38</item>
    </style>


    <style name="details_chips">
        <item name="android:clickable">false</item>
        <item name="backgroundTint">@color/card</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/font_size_label</item>
        <item name="android:textColor">@color/tertiary_38</item>
    </style>


    <style name="details_card">
        <item name="android:textColor">@color/tertiary_60</item>
        <item name="android:textSize">@dimen/font_size_label</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal</item>
    </style>


    <style name="searchCardView" parent="@style/Widget.Material3.CardView.Filled">
        <item name="android:width">@dimen/item_card_recent_food_width</item>
        <item name="android:height">@dimen/item_card_recent_food_height</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="cardCornerRadius">@dimen/radius_medium</item>
        <item name="cardElevation">@dimen/zero</item>
    </style>

    <style name="SearchBoxStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_large</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_large</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_large</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_large</item>
        <item name="boxStrokeWidth">@dimen/box_stroke_width</item>
        <item name="boxStrokeWidthFocused">@dimen/box_stroke_width</item>
        <item name="endIconDrawable">@drawable/icon_filter</item>
        <item name="endIconMode">custom</item>
        <item name="startIconDrawable">@drawable/icon_search</item>
        <item name="boxStrokeColor">@color/tertiary_60</item>
        <item name="hintTextColor">@color/tertiary_60</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/font_size_title</item>
    </style>

    <style name="chipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:textSize">@dimen/font_size_body</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/radius_large</item>
        <item name="cornerSizeTopLeft">@dimen/radius_large</item>
        <item name="cornerSizeBottomLeft">@dimen/zero</item>
        <item name="cornerSizeBottomRight">@dimen/zero</item>
    </style>

    <style name="TitleStyle" parent="TextStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center|start</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">@dimen/spacing_normal</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/spacing_normal</item>
    </style>

    <style name="TitleStyle_Medium" parent="TitleStyle">
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/tertiary_87</item>
    </style>

    <style name="CuisineStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:drawableStart">@drawable/icon_cuisin</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:textSize">@dimen/font_size_label</item>
    </style>

    <style name="CuisineNameStyle" parent="CuisineStyle">
        <item name="android:textColor">@color/tertiary_38</item>
        <item name="android:drawableTint">@color/tertiary_38</item>
    </style>

    <style name="TimerStyle" parent="CuisineStyle">
        <item name="android:drawableStart">@drawable/icon_timer</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="TimerDifferentColorStyle" parent="TimerStyle">
        <item name="android:textColor">@color/tertiary_38</item>
        <item name="android:drawableTint">@color/tertiary_38</item>
    </style>

</resources>