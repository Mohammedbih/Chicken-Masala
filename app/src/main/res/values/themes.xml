<resources>

    <style name="Theme.ChickenMasala" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="android:statusBarColor">?attr/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="background">@color/background</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.ChickenMasala">
        <item name="android:windowBackground">@drawable/splash_image</item>
    </style>


    <style name="BottomNavigationView">
        <item name="colorPrimary">@color/card</item>
        <item name="colorSecondaryContainer">@color/primary</item>
    </style>

    <style name="CardImageStyle" parent="">
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
        <item name="android:layout_marginEnd">@dimen/spacing_medium</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Large</item>
    </style>

</resources>