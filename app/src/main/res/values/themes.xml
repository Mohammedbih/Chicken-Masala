<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ChickenMasala" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="android:statusBarColor">?attr/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="background">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="BottomNavigationView">
        <item name="colorPrimary">@color/card</item>
        <item name="colorSecondaryContainer">@color/primary</item>
    </style>


    <style name="TextStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextStyle.ToolBar" parent="TextStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/font_size_title_large</item>
    </style>

    <style name="TextStyle.Title.Large" parent="TextStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/font_size_title_medium</item>
    </style>

    <style name="TextStyle.Title.Medium" parent="TextStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/font_size_title</item>
    </style>


    <style name="TextStyle.Body.Medium" parent="TextStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/font_size_body</item>
    </style>

    <style name="TextStyle.Body.Small" parent="TextStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/font_size_label</item>
    </style>


    <style name="TextStyle.Label.Large" parent="TextStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/font_size_body</item>
    </style>

    <style name="TextStyle.Label.Medium" parent="TextStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/font_size_label</item>
    </style>

    <style name="CardImageStyle" parent="">
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
        <item name="android:layout_marginEnd">@dimen/spacing_medium</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Large</item>
    </style>



</resources>